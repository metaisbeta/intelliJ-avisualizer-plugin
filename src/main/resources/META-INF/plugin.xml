<idea-plugin>
    <id>org.metaisbeta.plugins.asniffer</id>
    <name>ASniffer Tools</name>
    <vendor>metaisbeta</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="203"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->


        <applicationService serviceImplementation="org.metaisbeta.plugins.asniffer.services.GivServiceSettings"/>
        <projectConfigurable parentId="tools" instance="org.metaisbeta.plugins.asniffer.settings.ProjectSettingsConfigurable"
                             id="org.metaisbeta.plugins.asniffer.settings.ProjectSettingsConfigurable" displayName="Avisualizer Embedded Browser"
                             nonDefaultProject="true"/>

        <toolWindow id="Asniffer Tools Visualization" icon="/icons/icon.svg" anchor="right" factoryClass="org.metaisbeta.plugins.asniffer.GivToolWindowFactory"/>

    </extensions>

    <actions>
        <group id="ASnifferVisualizer.RunAsniffer" text="Asniffer Tools" description="Asniffer Tools">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="org.metaisbeta.plugins.asniffer.services.ASnifferService" id="ASnifferVisualizer.Actions.RunAsniffer"
                    text="Run Asniffer Analysis"/>
        </group>
    </actions>
</idea-plugin>
