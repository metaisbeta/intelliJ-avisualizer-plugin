<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>ASnifferVisualizer</name>
    <vendor>MetaIsBeta</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="203"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->


        <applicationService serviceImplementation="org.jetbrains.plugins.template.services.GivServiceSettings"/>
        <projectConfigurable parentId="tools" instance="org.jetbrains.plugins.template.settings.ProjectSettingsConfigurable"
                             id="org.jetbrains.plugins.template.settings.ProjectSettingsConfigurable" displayName="Avisualizer Embedded Browser"
                             nonDefaultProject="true"/>

        <toolWindow id="GIdeaBrowser" icon="/icons/icon.svg" anchor="right" factoryClass="org.jetbrains.plugins.template.GivToolWindowFactory"/>

    </extensions>

    <actions>
        <group id="ASnifferVisualizer.RunAsniffer" text="Asniffer Plugin" description="Asniffer methods">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="org.jetbrains.plugins.template.services.ASnifferService" id="ASnifferVisualizer.Actions.RunAsniffer"
                    text="Run Asniffer"/>
            <action class="org.jetbrains.plugins.template.services.AvisualizerService" id="ASnifferVisualizer.Actions.ExecuteAvisualizer"
                    text="Update Avisualizer"/>
        </group>
    </actions>
</idea-plugin>
